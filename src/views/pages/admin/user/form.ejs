<div class="md-form">
  <label for="form-name"><%= __('Full Name') %></label>
  <input type="text" maxlength="120" id="form-name" class="form-control" :class="[formErrors.name ? 'is-invalid' : '']"
    v-model="formData.name" />
  <div class="invalid-feedback" v-if="formErrors.name"><%= __('Please enter your full name') %></div>
</div>

<div class="md-form">
  <label for="form-email"><%= __('Mail Address') %></label>
  <input type="text" maxlength="300" id="form-email" class="form-control"
    :class="[formErrors.email ? 'is-invalid' : '']" v-model="formData.email" />
  <div class="invalid-feedback" v-if="formErrors.email"><%= __('Please enter a valid email address') %></div>
</div>

<div class="" v-if="user.isSandbox === false">
  <label for="form-role"><%= __('Role') %></label>
  <select class="browser-default custom-select mb-4" id="form-role" v-model="formData.role">
    <option value="0"><%= __('General user') %></option>
    <option value="1"><%= __('Administrator') %></option>
  </select>
</div>

<div class="row mt-3 mb-5">
  <div class="col-auto">
    <label for="team-selector"><%= __('Teams to participate') %></label>
    <v-tagify ref="tagify" id="team-selector" :settings="tagifySettings" @add="onAddTagify" @remove="onRemoveTagify"
      :class="[formErrors.teams ? 'is-invalid' : '']">
    </v-tagify>
    <div class="invalid-feedback" v-if="formErrors.teams">
      <%= __('Please select at least one team to join') %>
    </div>
  </div>
</div>

<% if(type === 'edit') { %>
<div class="custom-control custom-checkbox mt-3" v-if="user.isSandbox === false">
  <input type="checkbox" class="custom-control-input" id="form-deleted" v-model="formData.deleted" />
  <label class="custom-control-label" for="form-deleted"><%= __('Disable this account') %></label>
</div>
<% } %>

<div id="cloud-error" class="row">
  <div class="col-sm-6">
    <p class="text-danger" v-if="cloudError === 'emailAlreadyInUse'">
      <%= __('An account already exists that uses that email address') %>
    </p>
    <p class="text-danger" v-else-if="cloudError === 'unSelectedTeams'">
      <%= __('Please select at least one team to participate in') %>
    </p>
    <p class="text-danger" v-else-if="cloudError === 'unplanned'">
      <%= __('No more users can be created with the current plan. Please consider updating your plan') %>
    </p>
    <p class="text-danger" v-else-if="cloudError">
      <%= __("An error occurred while processing the request. Please check the information and try again. If the error persists, please contact your administrator") %>
    </p>
  </div>
</div>