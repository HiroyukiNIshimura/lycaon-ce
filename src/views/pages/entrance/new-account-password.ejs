<div id="new-account-password" v-cloak>
  <div class="container">
    <h3 class="text-center"><%= __('Password setting for new account') %></h3>
    <div class="new-password-form">
      <hr />
      <div><small :class="scoreClass">{{crackScore}}</small></div>
      <ajax-form action="updatePasswordAndLogin" :syncing.sync="syncing" :cloud-error.sync="cloudError"
        @submitted="submittedForm" @rejected="onCloudError" :handle-parsing="handleParsingForm">
        <div class="md-form mt-5">
          <label for="password"><%= __('New password') %></label>
          <v-text-input class="form-control" id="password" name="password" type="password" :maxlength="100"
            :class="[formErrors.password || formErrors.passwordLength ? 'is-invalid' : '']"
            v-model.trim="formData.password" />
          <div class="invalid-feedback" v-if="formErrors.password">
            <%= __('Please enter your new password') %>
          </div>
          <div class="invalid-feedback" v-if="formErrors.passwordLength">
            <%= __('Please enter the password from 6 to 100 characters') %>
          </div>
        </div>
        <div class="md-form">
          <label for="confirm-password"><%= __('Confirmation password') %></label>
          <v-text-input class="form-control" id="confirm-password" name="confirm-password" type="password" :maxlength="100"
            :class="[formErrors.confirmPassword ? 'is-invalid' : '']" v-model.trim="formData.confirmPassword" />
          <div class="invalid-feedback" v-if="formErrors.confirmPassword">
            <%= __('Passwords do not match') %>
          </div>
        </div>
        <p class="text-danger" v-if="cloudError">
          <small>
            <%= __("An error occurred while processing the request. Please check the information and try again. If the error persists, please contact your administrator") %></small>
        </p>
        <div class="row">
          <div class="col-sm-6">
            <small><label for="my-language"><%= __('Language setting') %></label></small>
            <select class="browser-default custom-select custom-select-sm" id="my-language" v-model="formData.language">
              <option v-for="item in locales" v-bind:value="item.key">
                {{ item.text }}
              </option>
            </select>
          </div>
        </div>

        <honeypot :form-data="formData"></honeypot>
        <div class="form-group mt-5">
          <button type="submit" class="btn btn-elegant btn-block"><%= __('Confirm') %></button>
        </div>
      </ajax-form>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>